{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "${file}",
        "--timeout",
        "10000",
        "--require",
        "ts-node/register",
        "--colors",
        "--watch",
        "--watch-extensions",
        "ts"
      ],
    }
   ]
}